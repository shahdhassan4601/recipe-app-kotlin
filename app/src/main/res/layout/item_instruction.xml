<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <!-- Step Number Circle -->
    <TextView
        android:id="@+id/stepNumber"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_orange_background"
        android:gravity="center"
        android:text="1"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Step Instruction -->
    <TextView
        android:id="@+id/stepInstruction"
        style="@style/RecipeApp.Body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Heat olive oil in a large pan over medium heat. Add mushrooms and cook until golden brown, about 8 minutes. Season with salt and pepper. Remove and set aside."
        android:textColor="@color/black" />

</LinearLayout>